<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/view_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题："
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_color_222222"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="13sp"
            android:textColor="@color/text_color_222222"
            android:textColorHint="@color/text_color_999999"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:hint="@string/string_report_hint"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_fbfbfb"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件分类：教育"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_color_222222"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_color_999999"
            android:text="请选择"
            android:drawableRight="@mipmap/icon_right_go"
            android:drawablePadding="3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_fbfbfb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件分类程度："
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_color_222222"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="严重"
            android:textColor="#e60012"
            android:textSize="13sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_report_unselect"
            android:drawablePadding="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="较重"
            android:textColor="#fb8f03"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_report_unselect"
            android:drawablePadding="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一般"
            android:textColor="#45a610"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_report_unselect"
            android:drawablePadding="7dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件内容："
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color_222222"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_color_222222"
            android:hint="请输入所需上报事件内容"
            android:textColorHint="@color/text_color_999999"
            android:background="@null"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_report_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:overScrollMode="never"
            android:scrollbars="none"/>
    </RelativeLayout>
</LinearLayout>